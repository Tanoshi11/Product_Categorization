<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="av"
        x:Class="Product_Categorization.MainWindow"
        Title="Product Management"
        Width="980" Height="720"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Global Style for Rounded Buttons -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF9E9E9E">
        <!-- Left Panel for Categories -->
        <Rectangle x:Name="category_filter_container" HorizontalAlignment="Left" Height="628" Margin="28,0,0,0" VerticalAlignment="Center" Width="297" Fill="#FFEDEDED"/>

        <TextBlock x:Name="category_name_input" HorizontalAlignment="Left" Margin="44,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="261" TextAlignment="Center" FontWeight="Bold" FontSize="30" Text="CATEGORY TYPE"/>

        <Button x:Name="add_category" Content="ADD CATEGORY" HorizontalAlignment="Left" Margin="44,124,0,0" VerticalAlignment="Top" Height="40" Width="117" Click="add_category_Click" Background="White" Foreground="#FFA0D94E" FontWeight="Bold" FontSize="11" Style="{StaticResource RoundedButton}"/>
        <Button x:Name="remove_category" Content="REMOVE CATEGORY" HorizontalAlignment="Left" Margin="188,124,0,0" VerticalAlignment="Top" Height="40" Width="117" Click="remove_category_Click" Foreground="#FFF16767" Background="White" FontWeight="Bold" FontSize="11" Style="{StaticResource RoundedButton}"/>

        <ListBox Name="lists_of_category" Foreground="Black" Margin="44,190,0,64" 
                 HorizontalAlignment="Left" Width="261" FontSize="20" 
                 Background="{x:Null}" SelectionChanged="lists_of_category_SelectionChanged"/>

        <!-- Right Panel for Items -->
        <Rectangle HorizontalAlignment="Left" Height="628" Stroke="Black" VerticalAlignment="Center" Width="606" Margin="348,0,0,0" Fill="#FFEDEDED"/>

        <TextBlock x:Name="selectedCategoryTextBlock" HorizontalAlignment="Left" Margin="375,72,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="215" 
                   TextAlignment="Center" FontWeight="Bold" FontSize="27" Text="CATEGORY TYPE"/>

        <Button x:Name="add_item" Content="ADD ITEM" HorizontalAlignment="Left" Margin="630,73,0,0" VerticalAlignment="Top" Height="40" Width="117" Click="add_item_Click" Foreground="#FFA0D94E" FontWeight="Bold" Background="White" Style="{StaticResource RoundedButton}"/>
        <Button x:Name="remove_item" Content="REMOVE ITEM" HorizontalAlignment="Left" Margin="786,73,0,0" VerticalAlignment="Top" Height="40" Width="117" Click="remove_item_Click" Background="White" Foreground="#FFF16767" FontWeight="Bold" FontSize="13" Style="{StaticResource RoundedButton}"/>

        <ListView x:Name="list_of_items_on_category" Margin="376,139,54,64" SelectionChanged="list_of_items_on_category_SelectionChanged" FontSize="20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Name}" Width="50"/>
                    <GridViewColumn Header="Item Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="280"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
