<Window x:Class="Product_Categorization.RemoveItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Item" Height="500" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#FF9E9E9E">

    <Grid Margin="20" Background="#FFEDEDED">
        <!-- Grid Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Labels -->
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="*"/>
            <!-- List Box -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left Side (Search) -->
            <ColumnDefinition Width="*"/>
            <!-- Right Side (Category + Description) -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock FontSize="23" FontWeight="Bold" Text="REMOVE ITEM"
                   HorizontalAlignment="Center" Margin="0,16,0,14"
                   Grid.ColumnSpan="2" FontFamily="Century Gothic"/>

        <!-- Search Items Label -->
        <TextBlock Text="Search Items:" FontSize="16" FontWeight="Bold"
                   Grid.Row="1" Grid.Column="0" Margin="20,0,10,5" FontFamily="Century Gothic"/>

        <!-- Select Category Label -->
        <TextBlock Text="Select Category:" FontSize="16" FontWeight="Bold"
                   Grid.Row="1" Grid.Column="1" Margin="20,0,10,5" FontFamily="Century Gothic"/>

        <!-- Search Input TextBox -->
        <TextBox Grid.Row="2" Grid.Column="0" Margin="20,0,20,10" Padding="5"
                 x:Name="ItemTextBox" LostFocus="ItemTextBox_LostFocus" GotFocus="ItemTextBox_GotFocus"
                 FontSize="14" Foreground="Gray" BorderBrush="Black" Text="Type to search..." FontFamily="Century Gothic"/>

        <!-- Select Category Dropdown -->
        <ComboBox x:Name="CategoryComboBox" Grid.Row="2" Grid.Column="1"
                  Margin="20,0,20,10" FontSize="14" BorderBrush="Black" FontFamily="Century Gothic">
            <ComboBox.ToolTip>
                <ToolTip Content="Choose a category"/>
            </ComboBox.ToolTip>
        </ComboBox>

        <!-- Search Results DataGrid -->
        <DataGrid x:Name="SearchResultsDataGrid"
          Grid.Row="2" Grid.Column="0"
          Margin="20,40,20,10"
          FontSize="14"
          BorderBrush="Black"
          GridLinesVisibility="All"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          SelectionChanged="SearchResultsDataGrid_SelectionChanged"
          HeadersVisibility="None"
          RowHeaderWidth="0" Grid.RowSpan="2" FontFamily="Century Gothic">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ItemName}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <DataGrid.Resources>
                <!-- Uniform Cell Borders -->
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <!-- Description Label -->
        <TextBlock Text="Description" Foreground="Black" FontSize="16" FontWeight="Bold"
                   Grid.Row="2" Grid.Column="1" Margin="20,40,20,15" Grid.RowSpan="2" FontFamily="Century Gothic"/>

        <!-- Description TextBox -->
        <TextBox x:Name="itemDescriptionTextBlock" TextWrapping="Wrap" IsReadOnly="True"
                 Grid.Row="3" Grid.Column="1" Margin="20,25,20,10"
                 FontSize="14" Background="White" BorderBrush="Black"
                 Text="No description available." FontFamily="Century Gothic"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,20,10">
            <Button Padding="10,5" x:Name="RemoveButton" FontSize="13" Content="Remove"
                    Click="RemoveButton_Click"
                    Foreground="Black" Background="White" BorderBrush="Black"
                    Margin="0,0,10,0" Width="74"/>
            <Button Padding="10,5" x:Name="CancelButton" FontSize="13" Content="Cancel"
                    Click="CancelButton_Click" Background="White" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
