<Window x:Class="Product_Categorization.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Item"
        Height="500"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF9E9E9E">

    <Window.Resources>
        <!-- Custom Style for Rounded Buttons with Simple Hover Effect -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <!-- Default background -->
            <Setter Property="Foreground" Value="Black"/>
            <!-- Text color -->
            <Setter Property="BorderBrush" Value="Gray"/>
            <!-- Border color -->
            <Setter Property="BorderThickness" Value="1"/>
            <!-- Border thickness -->
            <Setter Property="Padding" Value="10,5"/>
            <!-- Padding -->
            <Setter Property="FontSize" Value="14"/>
            <!-- Font size -->
            <Setter Property="FontWeight" Value="Bold"/>
            <!-- Font weight -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Rounded Border -->
                        <Border x:Name="border" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <!-- Content (Text) -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <!-- Hover Effect -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Change background to light gray on hover -->
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                <!-- Light gray -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Outer Grid (no row/col definitions) -->
    <Grid Background="#FFEDEDED" Margin="20">


        <!-- Title -->
        <TextBlock x:Name="AddItemTitleText"
                   Text="ADD ITEM"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,28,0,0"/>

        <!-- "Search Items:" label -->
        <TextBlock Text="Search Items:"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="27,74,0,0"/>

        <!-- Watermark + Search TextBox in a mini-Grid for overlay -->
        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="20,100,0,0"
              Width="250"
              Height="30">
            <!-- Actual TextBox -->
            <TextBox x:Name="ItemTextBox"
             Text="Type to search..."
             FontSize="14"
             Foreground="Gray"
             BorderBrush="Black"
             FontFamily="Century Gothic"
             Padding="5"
             Background="White"
             Margin="7,0,-7,0"
             GotFocus="ItemTextBox_GotFocus"
             LostFocus="ItemTextBox_LostFocus"
             TextChanged="ItemTextBox_TextChanged"/>



            <!-- Watermark TextBlock -->
        </Grid>

        <!-- DataGrid for search results -->
        <DataGrid x:Name="SearchResultsDataGrid"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="27,140,0,0"
                  Width="250"
                  Height="243"
                  FontSize="14"
                  BorderBrush="Black"
                  GridLinesVisibility="All"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionChanged="SearchResultsDataGrid_SelectionChanged"
                  HeadersVisibility="None"
                  RowHeaderWidth="0"
                  FontFamily="Century Gothic">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ItemName}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <!-- Uniform Cell Borders -->
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <!-- "Description" label -->
        <TextBlock Text="Description"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,74,169,0"/>

        <!-- Description TextBox -->
        <TextBox x:Name="itemDescriptionTextBlock"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 Text="No description available."
                 FontSize="14"
                 Background="White"
                 BorderBrush="Black"
                 FontFamily="Century Gothic"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,100,20,0"
                 Width="235"
                 Height="261"/>

        <!-- Buttons -->
        <Grid HorizontalAlignment="Right"
          VerticalAlignment="Bottom"
          Margin="0,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <!-- Space between buttons -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddButton" 
            Content="Add" 
            Width="100" 
            Height="30" 
            Style="{StaticResource RoundedButtonStyle}" 
            Click="AddButton_Click"
            Grid.Column="0"/>

            <Button x:Name="CancelButton" 
            Content="Close" 
            Width="100" 
            Height="30" 
            Style="{StaticResource RoundedButtonStyle}" 
            Click="CancelButton_Click"
            Grid.Column="2"/>
        </Grid>


    </Grid>
</Window>
